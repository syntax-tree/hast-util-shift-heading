{
  "name": "hast-util-shift-heading",
  "version": "1.0.0",
  "description": "Change heading rank (or depth, level) in hast",
  "license": "MIT",
  "keywords": [
    "heading",
    "rank",
    "depth",
    "level",
    "shift",
    "change",
    "hast",
    "html",
    "util",
    "utility"
  ],
  "repository": "syntax-tree/hast-util-shift-heading",
  "bugs": "https://github.com/syntax-tree/hast-util-shift-heading/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "unist-util-visit": "^1.4.0"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "hastscript": "^5.0.0",
    "nyc": "^13.0.0",
    "prettier": "^1.13.5",
    "remark-cli": "^6.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "tape": "^4.4.0",
    "tinyify": "^2.4.3",
    "xo": "^0.24.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build-bundle": "browserify . -s hastUtilShiftHeading > hast-util-shift-heading.js",
    "build-mangle": "browserify . -s hastUtilShiftHeading -p tinyify > hast-util-shift-heading.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "ignores": [
      "hast-util-shift-heading.js"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
