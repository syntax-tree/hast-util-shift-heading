{
  "name": "hast-util-shift-heading",
  "version": "2.0.1",
  "description": "hast utility to change heading rank (or depth, level)",
  "license": "MIT",
  "keywords": [
    "unist",
    "hast",
    "hast-util",
    "util",
    "utility",
    "html",
    "heading",
    "rank",
    "depth",
    "level",
    "shift",
    "change"
  ],
  "repository": "syntax-tree/hast-util-shift-heading",
  "bugs": "https://github.com/syntax-tree/hast-util-shift-heading/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "hast-util-heading-rank": "^1.0.0",
    "unist-util-visit": "^2.0.0"
  },
  "devDependencies": {
    "browserify": "^17.0.0",
    "hastscript": "^6.0.0",
    "nyc": "^15.0.0",
    "prettier": "^2.0.0",
    "remark-cli": "^9.0.0",
    "remark-preset-wooorm": "^8.0.0",
    "tape": "^5.0.0",
    "tinyify": "^3.0.0",
    "xo": "^0.35.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier . -w --loglevel warn && xo --fix",
    "build-bundle": "browserify . -s hastUtilShiftHeading -o hast-util-shift-heading.js",
    "build-mangle": "browserify . -s hastUtilShiftHeading -o hast-util-shift-heading.min.js -p tinyify",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "unicorn/prefer-number-properties": "off"
    },
    "ignores": [
      "hast-util-shift-heading.js"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
